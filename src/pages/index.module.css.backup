/* Homepage styles - converted from Tailwind */

/* Container and layout */
.container {
  position: relative;
  min-height: 100vh;
}

.backgroundWrapper {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
}

.gradientBackground {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: linear-gradient(
    to bottom right,
    rgba(254, 252, 232, 0.2),
    rgba(255, 255, 255, 1),
    rgba(254, 252, 232, 0.1),
    rgba(255, 255, 255, 1),
    rgba(252, 245, 229, 0.3),
    rgba(253, 230, 138, 0.4)
  );
}

[data-theme='dark'] .gradientBackground {
  background: linear-gradient(
    to bottom right,
    rgb(17, 24, 39),
    rgba(69, 26, 3, 0.3),
    rgba(12, 10, 9, 1),
    rgba(69, 26, 3, 0.1),
    rgba(69, 10, 10, 0.2),
    rgba(59, 7, 100, 0.1)
  );
}

.contentWrapper {
  position: relative;
  z-index: 10;
}

/* Hero Section */
.heroSection {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 70vh;
  padding: 3rem 1.5rem;
}

.animatedBlob {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  opacity: 0.3;
}

.blob {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 800px;
  height: 800px;
  background: linear-gradient(to right, rgba(251, 146, 60, 0.3), rgba(244, 114, 182, 0.3));
  border-radius: 50%;
  filter: blur(3rem);
  animation: pulse 2s infinite;
}

.heroContent {
  position: relative;
  text-align: center;
  max-width: 64rem;
  margin: 0 auto;
  z-index: 10;
}

/* Typography */
.mainHeading {
  font-family: 'Raleway', ui-serif, Georgia, serif;
  font-size: 3rem;
  font-weight: 700;
  margin-bottom: 1rem;
  line-height: 1;
  letter-spacing: -0.025em;
}

.headingBlack {
  color: black;
}

[data-theme='dark'] .headingBlack {
  color: white;
}

.headingGradient {
  background: linear-gradient(to right, rgb(251, 146, 60), rgb(249, 115, 22), rgb(253, 186, 116));
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
}

.subtitle {
  font-family: 'Open Sans', ui-sans-serif, system-ui;
  font-size: 1.25rem;
  color: rgb(55, 65, 81);
  margin-bottom: 2rem;
}

[data-theme='dark'] .subtitle {
  color: rgb(209, 213, 219);
}

/* CTA Buttons */
.ctaContainer {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  justify-content: center;
  max-width: 32rem;
  margin: 0 auto;
}

.ctaPrimary {
  font-family: 'Open Sans', ui-sans-serif, system-ui;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 1rem 2rem;
  font-size: 1rem;
  font-weight: 600;
  color: white;
  background: linear-gradient(to right, rgb(249, 115, 22), rgb(234, 88, 12));
  border-radius: 9999px;
  transform: scale(1);
  transition: all 0.2s;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  text-decoration: none;
  isolation: isolate;
  will-change: transform;
}

.ctaPrimary:hover {
  background: linear-gradient(to right, rgb(234, 88, 12), rgb(194, 65, 12));
  transform: scale(1.05);
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  text-decoration: none;
  color: white;
}

.ctaSecondary {
  font-family: 'Open Sans', ui-sans-serif, system-ui;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 1rem 2rem;
  font-size: 1rem;
  font-weight: 600;
  color: rgb(55, 65, 81);
  border: 2px solid rgb(209, 213, 219);
  border-radius: 9999px;
  transform: scale(1);
  transition: all 0.2s;
  text-decoration: none;
}

[data-theme='dark'] .ctaSecondary {
  color: rgb(209, 213, 219);
  border-color: rgb(75, 85, 99);
}

.ctaSecondary:hover {
  border-color: rgb(249, 115, 22);
  color: rgb(249, 115, 22);
  transform: scale(1.05);
  text-decoration: none;
}

[data-theme='dark'] .ctaSecondary:hover {
  border-color: rgb(249, 115, 22);
  color: rgb(249, 115, 22);
}

.ctaIcon {
  margin-left: 0.5rem;
  width: 1.25rem;
  height: 1.25rem;
}

/* About Section */
.aboutSection {
  position: relative;
  padding: 6rem 1.5rem;
  overflow: hidden;
}

.aboutContainer {
  max-width: 80rem;
  margin: 0 auto;
}

.aboutGrid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 3rem;
  align-items: center;
}

.imageContainer {
  position: relative;
}

.decorativeElement1 {
  position: absolute;
  top: -2.5rem;
  left: -2.5rem;
  width: 8rem;
  height: 8rem;
  background: linear-gradient(to bottom right, rgba(253, 186, 116, 0.2), rgba(249, 115, 22, 0.2));
  border-radius: 50%;
  filter: blur(2rem);
}

.decorativeElement2 {
  position: absolute;
  bottom: -2.5rem;
  right: -2.5rem;
  width: 10rem;
  height: 10rem;
  background: linear-gradient(to top right, rgba(251, 146, 60, 0.2), rgba(244, 114, 182, 0.2));
  border-radius: 50%;
  filter: blur(2rem);
}

.floatingCircle1 {
  position: absolute;
  top: 5rem;
  right: 2.5rem;
  width: 1rem;
  height: 1rem;
  background: rgba(251, 146, 60, 0.4);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
}

.floatingCircle2 {
  position: absolute;
  bottom: 5rem;
  left: 2.5rem;
  width: 1.5rem;
  height: 1.5rem;
  background: rgba(253, 186, 116, 0.3);
  border-radius: 50%;
  animation: float 8s ease-in-out infinite 1s;
}

.imagePlaceholder {
  position: relative;
  z-index: 10;
  border-radius: 1rem;
  overflow: hidden;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  background: linear-gradient(to bottom right, rgb(254, 243, 199), rgb(253, 230, 138));
  height: 24rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

[data-theme='dark'] .imagePlaceholder {
  background: linear-gradient(to bottom right, rgba(69, 26, 3, 0.3), rgba(92, 25, 2, 0.3));
}

.placeholderContent {
  text-align: center;
}

.placeholderIcon {
  width: 6rem;
  height: 6rem;
  margin: 0 auto 1rem;
  background: rgba(251, 146, 60, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholderIconSvg {
  width: 3rem;
  height: 3rem;
  color: rgb(234, 88, 12);
}

.placeholderText {
  color: rgb(234, 88, 12);
  font-weight: 500;
}

[data-theme='dark'] .placeholderText {
  color: rgb(251, 146, 60);
}

.gradientOverlay {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.1), transparent);
}

.aboutContent {
  padding-left: 0;
}

.aboutHeading {
  font-family: 'Raleway', ui-serif, Georgia, serif;
  font-size: 2.25rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
  color: rgb(17, 24, 39);
}

[data-theme='dark'] .aboutHeading {
  color: white;
}

.aboutTextContainer {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.aboutText {
  font-family: 'Open Sans', ui-sans-serif, system-ui;
  font-size: 1.125rem;
  color: rgb(75, 85, 99);
  line-height: 1.75;
}

[data-theme='dark'] .aboutText {
  color: rgb(209, 213, 219);
}

.dividerContainer {
  margin-top: 2rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.divider1 {
  height: 0.25rem;
  width: 5rem;
  background: linear-gradient(to right, rgb(251, 146, 60), rgb(249, 115, 22));
  border-radius: 9999px;
}

.divider2 {
  height: 0.25rem;
  width: 2.5rem;
  background: rgb(253, 186, 116);
  border-radius: 9999px;
}

.divider3 {
  height: 0.25rem;
  width: 1.25rem;
  background: rgb(254, 215, 170);
  border-radius: 9999px;
}

/* Responsive Design */
@media (min-width: 640px) {
  .heroSection {
    padding: 3rem 2rem;
  }
  
  .mainHeading {
    font-size: 3.75rem;
  }
  
  .subtitle {
    font-size: 1.5rem;
  }
  
  .ctaContainer {
    flex-direction: row;
  }
  
  .aboutHeading {
    font-size: 3rem;
  }
}

@media (min-width: 768px) {
  .mainHeading {
    font-size: 4.5rem;
    white-space: nowrap;
  }
  
  .subtitle {
    font-size: 1.875rem;
  }
  
  .aboutHeading {
    font-size: 3.75rem;
  }
}

@media (min-width: 1024px) {
  .mainHeading {
    font-size: 6rem;
  }
  
  .subtitle {
    font-size: 2.25rem;
  }
  
  .aboutGrid {
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }
  
  .aboutContent {
    padding-left: 2rem;
  }
  
  .aboutHeading {
    font-size: 3.75rem;
  }
}

@media (min-width: 1280px) {
  .mainHeading {
    font-size: 7rem;
  }
  
  .subtitle {
    font-size: 2.25rem;
  }
}

@media (min-width: 1536px) {
  .mainHeading {
    font-size: 8rem;
  }
  
  .subtitle {
    font-size: 3rem;
  }
}

/* Animations */
@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-20px);
  }
}
